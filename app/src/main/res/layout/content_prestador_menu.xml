<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".PrestadorMenu"
    tools:showIn="@layout/app_bar_prestador_menu">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/secao_contratos_pendentes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="8dp"
                android:paddingTop="8dp"
                android:paddingRight="8dp">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Contratos pendentes"
                    android:textSize="18sp"
                    android:textColor="@color/colorPrimaryDark"/>

                <ListView
                    android:id="@+id/list_contratos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:divider="#b5b5b5"
                    android:dividerHeight="1dp"
                    android:background="@drawable/listviewcustomizado"
                    android:theme="@android:style/Theme.Light"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="8dp"
                android:paddingTop="8dp"
                android:paddingRight="8dp"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/text_servicos_cadastrados"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ServiÃ§os cadastrados"
                    android:textSize="18sp"
                    android:textColor="@color/colorPrimaryDark"/>

                <ListView
                    android:id="@+id/list_servico"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:divider="#b5b5b5"
                    android:dividerHeight="1dp"
                    android:background="@drawable/listviewcustomizado"
                    android:theme="@android:style/Theme.Light"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>


</android.support.constraint.ConstraintLayout>